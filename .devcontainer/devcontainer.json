{
  "name": "Python with MariaDB",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspaces/bsky",
  
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.black-formatter",
        "ms-python.isort",
        "mtxr.sqltools",
        "mtxr.sqltools-driver-mysql",
        "ms-vscode.vscode-json",
        "ms-python.debugpy"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true,
        "python.formatting.provider": "black",
        "python.terminal.activateEnvironment": false,
        "sqltools.connections": [
          {
            "name": "MariaDB Local",
            "driver": "MySQL",
            "server": "mariadb",
            "port": 3306,
            "database": "bsky_db",
            "username": "bsky_user",
            "password": "bsky_password"
          }
        ]
      }
    }
  },

  "postCreateCommand": "/workspaces/bsky/.devcontainer/post-create.sh",
  "postStartCommand": "/workspaces/bsky/.devcontainer/post-start.sh",

  "forwardPorts": [3306, 8080],
  
  "remoteUser": "vscode"
}
