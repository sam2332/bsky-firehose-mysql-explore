# Bluesky Posts Explorer - Environment Configuration
# Copy this file to .env and modify the values as needed

# Database Configuration
MYSQL_HOST=mariadb
MYSQL_DATABASE=bsky_db
MYSQL_USER=bsky_user
MYSQL_PASSWORD=bsky_password
MYSQL_PORT=3306

# Flask Configuration
SECRET_KEY=your-secret-key-here
FLASK_ENV=development
FLASK_DEBUG=1

# Application Settings
POSTS_PER_PAGE=20
MAX_SEARCH_RESULTS=1000
